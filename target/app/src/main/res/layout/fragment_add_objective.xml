<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addObjectiveViewModel"
            type="id.ac.ui.cs.mobileprogramming.wisnupramadhitya.target.viewmodel.AddObjectiveViewModel" />
    </data>

    <LinearLayout
        tools:context=".ui.addobjective.AddObjectiveFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TextInputTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_objective_title"
                    android:inputType="text"
                    android:hint="@string/objective"
                    android:text="@={addObjectiveViewModel.title}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TextInputTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_objective_reason"
                    android:inputType="text"
                    android:hint="@string/add_objective_rational_hint"
                    android:text="@={addObjectiveViewModel.rational}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/objective_deadline"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:backgroundTint="?attr/colorSurface"
                app:rippleColor="@color/primary_color_accent"
                app:icon="@drawable/ic_event_available_24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/primary_color_accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/objective_save"
                style="@style/AppTheme.PrimaryTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_save"
                android:onClick="@{(view) -> addObjectiveViewModel.addObjective(view)}"
                android:enabled="@{!addObjectiveViewModel.title.empty}"
                app:backgroundTint="?attr/colorSurface"
                app:rippleColor="@color/primary_color_accent"/>
        </RelativeLayout>
    </LinearLayout>
</layout>